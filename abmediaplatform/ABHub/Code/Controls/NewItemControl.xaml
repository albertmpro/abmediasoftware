<local:HubDialog x:Class="ABHub.Code.Controls.NewItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=Albert.Win32"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABHub.Code.Controls"
             mc:Ignorable="d" Background="{StaticResource abAccent}" 
             d:DesignHeight="450" IsButtonsHidden="True" d:DesignWidth="800">
    <Grid Background="{StaticResource abBackground}">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
          
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<c:OptionButton Style="{StaticResource optNew}" ToolTip="New Note Project" Tag="Note" Click="New_Click" Grid.Row="0" Grid.Column="0" Content="New Note" />
        <c:OptionButton Style="{StaticResource optNew}" ToolTip="New Draw Project" Tag="Draw" Click="New_Click" Grid.Row="0" Grid.Column="1" Content="New Draw" />
	</Grid>
</local:HubDialog>
