             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=AlbertWin32"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:abArt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions> 
        
        <!-- Logo -->
        <StackPanel>
        <Image Width="300" Height="300" Source="/Images/abArtboard.png"  />
        
        </StackPanel>

        <!-- Tab Control Task and Notes-->
        <TabControl Grid.Column="1">
            
            <c:DocumentTabItem Header="Task">
                
            </c:DocumentTabItem>
            <c:DocumentTabItem Header="Notes">

            </c:DocumentTabItem>

        </TabControl>
    </Grid>
</local:ArtView>
